{% extends 'base.html.twig' %}

{% block title %}Color index{% endblock %}

{% block body %}
    <div class="form-group row">
        <div class="col-sm-7">
            <h1 class="h3 mb-3 font-weight-normal">Color index</h1>
        </div>
        <div class="col-sm-1">
            <a href="{{ path('color_new') }}" class="btn btn-success">Create new</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Active?</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for color in colors %}
            <tr>
                <td>{{ color.name }}</td>
                <td>{{ color.isActive ? 'Yes' : 'No' }}</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic example">
                        {#<a href="{{ path('color_show', {'id': color.id}) }}">show</a>#}
                        <a href="{{ path('color_edit', {'id': color.id}) }}" class="btn btn-primary">Edit</a>
                        {{ include('color/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}