<form method="post" action="{{ path('location_type_delete', {'id': location_type.id}) }}" onsubmit="return confirm('Are you sure you want to delete this location type: {{ location_type.name }}?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ location_type.id) }}">
    <button class="btn btn-danger btn-sm">Delete</button>
</form>