<form method="post" action="{{ path('decoration_delete', {'id': decoration.id}) }}" onsubmit="return confirm('Are you sure you want to delete this decoration: {{ decoration.name }}?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ decoration.id) }}">
    <button class="btn btn-danger btn-sm">Delete</button>
</form>