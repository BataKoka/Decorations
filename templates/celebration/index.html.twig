{% extends 'base.html.twig' %}

{% block title %}Celebration index{% endblock %}

{% block body %}
    <div class="form-group row">
        <div class="col-sm-7">
            <h1 class="h3 mb-3 font-weight-normal">Celebration index</h1>
        </div>
        <div class="col-sm-1">
            <a href="{{ path('celebration_new') }}" class="btn btn-success">Create new</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Active?</th>
                <th>Name</th>
                <th>Type</th>
                <th>Location</th>
                <th>Location percentage</th>
                <th>Date</th>
                <th>Revenue</th>
                <th>Worker Expense</th>
                <th>Transport Expense</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for celebration in celebrations %}
            <tr>
                <td>{{ celebration.isActive ? '<span class="badge badge-success">Yes</span>' : '<span class="badge badge-danger">No</span>' }}</td>
                <td>{{ celebration.name }}</td>
                <td>{{ celebration.celebrationType.name }}</td>
                <td>{{ celebration.location.name }}</td>
                <td>{{ celebration.locationPercentage }} %</td>
                <td>{{ celebration.date ? celebration.date|date('d. M Y') : '' }}</td>
                <td>{{ celebration.revenue }}</td>
                <td>{{ celebration.workerExpense }}</td>
                <td>{{ celebration.transportExpense }}</td>
                <td class="text-center">
                    <div class="btn-group" role="group" aria-label="Basic example">
                        {#<a href="{{ path('celebration_show', {'id': celebration.id}) }}">show</a>#}
                        <a href="{{ path('celebration_edit', {'id': celebration.id}) }}" class="btn btn-primary">Edit</a>
                        {{ include('celebration/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}