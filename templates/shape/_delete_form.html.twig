<form method="post" action="{{ path('shape_delete', {'id': shape.id}) }}" onsubmit="return confirm('Are you sure you want to delete this shape: {{ shape.name }}?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ shape.id) }}">
    <button class="btn btn-danger btn-sm">Delete</button>
</form>