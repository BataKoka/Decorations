<form method="post" action="{{ path('decoration_item_delete', {'id': decoration_item.id}) }}" onsubmit="return confirm('Are you sure you want to delete this decoration item: {{ decoration_item.balloon.name }}?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ decoration_item.id) }}">
    <button class="btn btn-danger btn-sm">Delete</button>
</form>