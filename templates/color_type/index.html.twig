{% extends 'base.html.twig' %}

{% block title %}ColorType index{% endblock %}

{% block body %}
    <h1>ColorType index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>IsActive</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for color_type in color_types %}
            <tr>
                <td>{{ color_type.id }}</td>
                <td>{{ color_type.name }}</td>
                <td>{{ color_type.isActive ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('color_type_show', {'id': color_type.id}) }}">show</a>
                    <a href="{{ path('color_type_edit', {'id': color_type.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('color_type_new') }}">Create new</a>
{% endblock %}