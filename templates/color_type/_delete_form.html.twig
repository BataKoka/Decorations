<form method="post" action="{{ path('color_type_delete', {'id': color_type.id}) }}" onsubmit="return confirm('Are you sure you want to delete this color type: {{ color_type.name }}?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ color_type.id) }}">
    <button class="btn btn-danger btn-sm">Delete</button>
</form>