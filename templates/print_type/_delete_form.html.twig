<form method="post" action="{{ path('print_type_delete', {'id': print_type.id}) }}" onsubmit="return confirm('Are you sure you want to delete this print type: {{ print_type.name }}?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ print_type.id) }}">
    <button class="btn btn-danger">Delete</button>
</form>